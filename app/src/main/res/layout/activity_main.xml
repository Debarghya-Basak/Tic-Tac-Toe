<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497"
        app:srcCompat="@drawable/tictactoe_grid" />

    <TextView
        android:id="@+id/text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="44dp"
        android:text="RESULT"
        android:textColor="#BE1FDD"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/image_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <TextView
        android:id="@+id/show_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="41dp"
        android:text="Waiting..."
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/image_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_result" />

    <ImageView
        android:id="@+id/dice_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:onClick="dice1"
        app:layout_constraintBottom_toBottomOf="@+id/image_grid"
        app:layout_constraintEnd_toEndOf="@+id/image_grid"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="@+id/image_grid"
        app:layout_constraintTop_toTopOf="@+id/image_grid"
        app:layout_constraintVertical_bias="0.026"
        app:srcCompat="@drawable/green_round" />

    <ImageView
        android:id="@+id/dice_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:onClick="dice2"
        app:layout_constraintBottom_toBottomOf="@+id/image_grid"
        app:layout_constraintEnd_toEndOf="@+id/image_grid"
        app:layout_constraintStart_toStartOf="@+id/image_grid"
        app:layout_constraintTop_toTopOf="@+id/image_grid"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/green_round" />

    <ImageView
        android:id="@+id/dice_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:onClick="dice3"
        app:layout_constraintBottom_toBottomOf="@+id/image_grid"
        app:layout_constraintEnd_toEndOf="@+id/image_grid"
        app:layout_constraintHorizontal_bias="0.969"
        app:layout_constraintStart_toStartOf="@+id/image_grid"
        app:layout_constraintTop_toTopOf="@+id/image_grid"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/green_round" />

    <ImageView
        android:id="@+id/dice_4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:onClick="dice4"
        app:layout_constraintBottom_toBottomOf="@+id/image_grid"
        app:layout_constraintEnd_toEndOf="@+id/image_grid"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="@+id/image_grid"
        app:layout_constraintTop_toTopOf="@+id/image_grid"
        app:srcCompat="@drawable/green_round" />

    <ImageView
        android:id="@+id/dice_5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:onClick="dice5"
        app:layout_constraintBottom_toBottomOf="@+id/image_grid"
        app:layout_constraintEnd_toEndOf="@+id/image_grid"
        app:layout_constraintStart_toStartOf="@+id/image_grid"
        app:layout_constraintTop_toTopOf="@+id/image_grid"
        app:layout_constraintVertical_bias="0.496"
        app:srcCompat="@drawable/green_round" />

    <ImageView
        android:id="@+id/dice_6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:onClick="dice6"
        app:layout_constraintBottom_toBottomOf="@+id/image_grid"
        app:layout_constraintEnd_toEndOf="@+id/image_grid"
        app:layout_constraintHorizontal_bias="0.969"
        app:layout_constraintStart_toStartOf="@+id/image_grid"
        app:layout_constraintTop_toTopOf="@+id/image_grid"
        app:srcCompat="@drawable/green_round" />

    <ImageView
        android:id="@+id/dice_7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:onClick="dice7"
        app:layout_constraintBottom_toBottomOf="@+id/image_grid"
        app:layout_constraintEnd_toEndOf="@+id/image_grid"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="@+id/image_grid"
        app:layout_constraintTop_toTopOf="@+id/image_grid"
        app:layout_constraintVertical_bias="0.973"
        app:srcCompat="@drawable/green_round" />

    <ImageView
        android:id="@+id/dice_8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:onClick="dice8"
        app:layout_constraintBottom_toBottomOf="@+id/image_grid"
        app:layout_constraintEnd_toEndOf="@+id/image_grid"
        app:layout_constraintStart_toStartOf="@+id/image_grid"
        app:layout_constraintTop_toTopOf="@+id/image_grid"
        app:layout_constraintVertical_bias="0.969"
        app:srcCompat="@drawable/green_round" />

    <ImageView
        android:id="@+id/dice_9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:onClick="dice9"
        app:layout_constraintBottom_toBottomOf="@+id/image_grid"
        app:layout_constraintEnd_toEndOf="@+id/image_grid"
        app:layout_constraintHorizontal_bias="0.969"
        app:layout_constraintStart_toStartOf="@+id/image_grid"
        app:layout_constraintTop_toTopOf="@+id/image_grid"
        app:layout_constraintVertical_bias="0.965"
        app:srcCompat="@drawable/green_round" />

    <Button
        android:id="@+id/reset_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="16dp"
        android:onClick="resetGame"
        android:text="RESET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_grid" />

    <ImageView
        android:id="@+id/win_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:alpha="0"
        android:foregroundTintMode="add"
        app:layout_constraintBottom_toBottomOf="@+id/image_grid"
        app:layout_constraintEnd_toEndOf="@+id/image_grid"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/image_grid"
        app:layout_constraintTop_toTopOf="@+id/image_grid"
        app:layout_constraintVertical_bias="0.411"
        app:srcCompat="@drawable/win_line"
        app:tint="#8000FF" />

</androidx.constraintlayout.widget.ConstraintLayout>